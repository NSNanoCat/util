{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ESNext",
    "target": "ES2021",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src"]
}